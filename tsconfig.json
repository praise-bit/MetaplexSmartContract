{
    "compilerOptions": {
      "target": "ES2020",                // modern JS output
      "module": "commonjs",              // Node module system
      "strict": true,                    // strict type checking
      "esModuleInterop": true,           // allow default imports from CommonJS
      "skipLibCheck": true,              // skip type checks of node_modules
      "forceConsistentCasingInFileNames": true // prevent casing mismatches
    },
    "include": ["tests/**/*.ts"]         // include all TS files in tests folder
  }
  